    font-weight: 300;
    color: #ffffff;
}

.navbar {
    background: #23272A;
    padding: 21px 42px;
}

.navbar a {
    transition: .25s ease;
    color: #ffffff;
    text-decoration: none;
}

.navbar a:hover {
    color: #7792f3;
}

.navbar a:not(:last-child) {
    margin-right: 12px;
}

.navbar .right {
    float: right;
}
